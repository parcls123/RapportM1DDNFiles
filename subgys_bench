((MPIPROCS=$THPNODE/$NTHREAD))
((NCPUS=$NPES*$NTHREAD))
((CPUTASK=$NTHREAD))
((NCORES=$NTHREAD))
if [ $CPUTASK -eq 0 ]; then
    ((CPUTASK=1))
fi
((NNODES=$NCPUS/$THPNODE))
if [ $NNODES -eq 0 ]; then
    ((NNODES=1))
fi
((RESIDU=$NCPUS%$THPNODE))
if [ $RESIDU -gt 0 ]; then
    echo "One node would be underused. Please set NCPUS as a multiple of $THPNODE"
    exit
fi

