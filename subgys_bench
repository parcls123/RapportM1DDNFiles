    QUEUE_NAME="L"
    if  [ ${TIME} -ge "86400" ]; then
        TIMEH="23:59:00"
    fi
fi
# S-M class
if [ ${NCPUS} -gt "80" ] && [ ${NCPUS} -le "1040" ]; then
    QUEUE_NAME="S-M"
    if  [ ${TIME} -ge "86400" ]; then
        TIMEH="23:59:00"
    fi
fi
# dev class
if [ ${NCPUS} -le "80" ]; then
    QUEUE_NAME="dev"
    if  [ ${TIME} -ge "10800" ]; then
        TIMEH="3:00:00"
    fi
fi

if [ -z "${QUEUE_NAME}" ]; then
    echo " No queue batch available for this number of cores " ${NCPUS}
    exit
else
    echo " Queue Name = " $QUEUE_NAME
    echo " QOS        = " $QOS_NAME
    echo " Walltime   = " $TIMEH
fi

